{{template "base" .}}

{{define "title"}}Your Quotes{{end}}

{{define "main"}}
    <h2>Your Quotes</h2>
    {{if .Snippets}}
     <table>
        <tr>
            <th>Title</th>
            <th>Created</th>

        </tr>
        {{range .Snippets}}
        <tr>
            <td><a href='/snippet/{{.ID}}'>{{.Title}}</a></td>
            <td>{{humanDate .Created}}</td>

        </tr>
        {{end}} 
    </table>
    {{else}}
        <p>There's nothing to see here... yet!</p>  
    {{end}}

{{end}}
